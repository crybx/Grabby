{
  "manifest_version": 3,
  "name": "Grabby",
  "description": "Extract only the readable text from a web page.",
  "version": "1.0",
  "icons": {
    "128": "images/clipboard128.png"
  },
  "action": {
    "default_popup": "grabby.html",
    "default_icon": "images/clipboard128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "tabs"
  ],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles/grabby.css"]
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["styles/youtube-nyan-cat.css"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+X",
        "mac": "Alt+X"
      },
      "description": "Run Grabby on current page"
    },
    "grab-content": {
      "suggested_key": {
        "default": "Alt+G",
        "mac": "Alt+G"
      },
      "description": "Grab content without opening popup"
    }
  }
}