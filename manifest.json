{
  "manifest_version": 3,
  "name": "Grabby",
  "description": "Make reading stories online easier. Save chapters as clean, readable files and track reading progress across ongoing stories.",
  "version": "0.1.0",
  "default_locale": "en",
  "icons": {
    "128": "images/clipboard128.png"
  },
  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": "images/clipboard128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "downloads",
    "webRequest",
    "declarativeNetRequest",
    "scripting",
    "tabs",
    "storage",
    "unlimitedStorage",
    "alarms"
  ],
  "host_permissions": ["*://*/*", "file:///*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "match_origin_as_fallback": true,
      "css": ["styles/grabby-button.css", "styles/grabby.css"],
      "js": ["content-scripts/grabby-button.js"]
    },
    {
      "matches": ["*://*.hyacinthbloom.com/*"],
      "css": ["styles/hyacinth.css"]
    },
    {
      "matches": ["*://*.wordpress.com/*"],
      "css": ["styles/wordpress.css"]
    }
  ],
  "commands": {
    "grab_content": {
      "suggested_key": {
        "default": "Alt+G",
        "mac": "Alt+G"
      },
      "description": "Grab content without opening popup"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["images/clipboard128.png"],
      "matches": ["<all_urls>"],
      "match_origin_as_fallback": true
    }
  ]
}