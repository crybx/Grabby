{
  "manifest_version": 3,
  "name": "Grabby",
  "description": "A content extractor for web novels and articles.",
  "version": "1.0",
  "icons": {
    "128": "clipboard128.png"
  },
  "action": {
    "default_popup": "grabby.html",
    "default_icon": "clipboard128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "declarativeContent",
    "downloads",
    "offscreen",
    "scripting",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webRequest"
  ],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils.js",
        "grabbers.js"
      ],
      "css": ["styles/grabby.css"]
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["styles/youtube-nyan-cat.css"]
    }
  ]
}