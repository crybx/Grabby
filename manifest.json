{
  "manifest_version": 3,
  "name": "Grabby",
  "description": "Extract only the readable text from a web page.",
  "version": "1.0",
  "icons": {
    "128": "images/clipboard128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/clipboard128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "tabs",
    "storage",
    "alarms"
  ],
  "host_permissions": ["*://*/*", "file:///*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "match_origin_as_fallback": true,
      "css": ["styles/grabby.css"],
      "js": ["content-scripts/grabby-button.js"]
    },
    {
      "matches": ["*://*.battwo.com/*"],
      "css": ["styles/batoto.css"]
    },
    {
      "matches": ["*://*.hyacinthbloom.com/*"],
      "css": ["styles/hyacinth.css"]
    },
    {
      "matches": ["*://*.ridibooks.com/*"],
      "css": ["styles/ridibooks.css"]
    },
    {
      "matches": ["*://*.wordpress.com/*"],
      "css": ["styles/wordpress.css"]
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["styles/youtube-nyan-cat.css"]
    }
  ],
  "commands": {
    "grab_content": {
      "suggested_key": {
        "default": "Alt+G",
        "mac": "Alt+G"
      },
      "description": "Grab content without opening popup"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["images/clipboard128.png"],
      "matches": ["<all_urls>"],
      "match_origin_as_fallback": true
    }
  ]
}